<% provide(:title, "Reset Password") %>
<h1>Reset password</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag password_resets_path, method: :post do %>

      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>

    <p><%= submit_tag "Reset Password" %></p>
    <% end%>
  </div>
</div>
